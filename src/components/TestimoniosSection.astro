---
import StarIcon from '../components/icons/Star.astro';
import Card from './ui/Card.astro';
import CardContent from './ui/CardContent.astro';

const testimonios = [
  {
    name: "María González",
    text: "Excelente atención y profesionalismo. Nos ayudaron a encontrar la casa perfecta para nuestra familia.",
    rating: 5,
  },
  {
    name: "Carlos Rodríguez",
    text: "Muy recomendable. Son personas de confianza que realmente se preocupan por sus clientes.",
    rating: 5,
  },
  {
    name: "Ana Martínez",
    text: "Gracias a Träsel encontramos nuestro primer hogar. Trato familiar y honesto.",
    rating: 5,
  },
];
---
<section class="py-16 bg-muted/30">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
  <h2 class="text-3xl md:text-4xl font-heading font-black text-foreground mb-4">Lo que dicen nuestros clientes</h2>
  <p class="text-lg text-muted-foreground">La confianza de las familias que ya encontraron su hogar</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
      {testimonios.map((testimonial) => (
        <Card className="border-0 shadow-sm rounded-xl bg-white">
          <CardContent className="p-6 pt-6">
            <div class="flex mb-4">
              {[...Array(testimonial.rating)].map((_, i) => (
                <StarIcon className="h-4 w-4 fill-primary text-primary" />
              ))}
            </div>
            <p class="text-muted-foreground mb-4 italic">"{testimonial.text}"</p>
            <p class="font-semibold text-foreground">- {testimonial.name}</p>
          </CardContent>
        </Card>
      ))}
      {/* DESDE ACA PARA ARRIBA */}
    </div>
  </div>
</section>
